<section class="content-header">
    <h1>
        Consultar Estacionamiento
    </h1>
</section>
<section class="content">
    <div class="row">
        <!-- left column -->
        <div class="col-md-12">
            <!-- general form elements -->
            <div class="box box-primary">
                <div class="box-header with-border">
                    <h3 class="box-title">Criterios de Búsqueda</h3>
                </div>
                <!-- /.box-header -->
                <!-- form start -->
                <%= form_for_filterrific @filterrific do |f| %>
                    <div class="row">
                        <div class="col-md-3">
                            <div class="box-body">
                                <div class="form-group">
                                    <label>Distrito</label>
                                    <%= f.select(:with_distrito_id, @filterrific.select_options[:with_distrito_id], {include_blank: ':: Todos ::'}, {class: "form-control"}) %>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="box-body">
                                <div class="form-group">
                                    <label>Tipo</label>
                                    <%= f.select(:with_tipo_id, @filterrific.select_options[:with_tipo_id], {include_blank: ':: Todos ::'}, {class: "form-control"}) %>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="box-body">
                                <div class="form-group">
                                    <label >Ubicación</label>
                                    <%= f.select(:with_ubicacion_id, @filterrific.select_options[:with_ubicacion_id], {include_blank: ':: Todos ::'}, {class: "form-control"}) %>
                                </div>
                            </div>
                        </div>
                    </div>
                <% end %>
            </div>
            <!-- /.box -->
        </div>
        <!--/.col (left) -->

    </div>
        <div class="row">
        <div class="col-xs-12">
            <div class="box box-primary">
                <div class="box-header with-border">
                    <h3 class="box-title">Resultados de Búqueda</h3>
                </div>
                <!-- /.box-header -->
                
                    <%= render(
                        partial: 'estacionamientos/list',
                        locals: { estacionamientos: @ListaEstacionamiento }
                        ) 
                    %>
                
            </div>
            <!-- /.box -->
        </div>
    </div>
    <!-- /.row -->
</section>